    <script src="bike.js"></script> <!-- Import data from bike.js -->
    <script>
        
        // Function to display selected bike details in show_dates.html
        function displayBikeDetails() {
            // Get the selected bike's ID from localStorage
            const selectedBikeId = localStorage.getItem('selectedBikeId');

            // if (!selectedBikeId) {
            //     alert("No bike selected");
            //     return;
            // }

            // Find the selected bike from the bikes array
            const selectedBike = bikes.find(bike => bike.id === selectedBikeId);

            // if (!selectedBike) {
            //     alert("Bike not found");
            //     return;
            // }

            // Mock data for borrow and return dates (you can replace these with actual logic)
            const borrowDate = localStorage.getItem('borrowDate');  // Retrieve from localStorage
            const returnDate = localStorage.getItem('returnDate');  // Retrieve from localStorage

            // Display the selected bike details in a table row
            const bikeDetailsDiv = document.getElementById('bikeDetails');
            bikeDetailsDiv.innerHTML = `
                <tr>
                    <td>${selectedBike.brand}</td>
                    <td>${selectedBike.color}</td>
                    <td>Pending. . .</td>
                    <td><img src="${selectedBike.image}" alt="${selectedBike.brand}" class="img-fluid" style="max-width: 100px;"></td>
                    <td>${borrowDate ? borrowDate : 'Not selected'}</td>
                    <td>${returnDate ? returnDate : 'Not selected'}</td>
                </tr>
            `;

            // Show the borrow and return dates
            const borrowDateDisplay = document.getElementById('borrowDateDisplay');
            const returnDateDisplay = document.getElementById('returnDateDisplay');

            if (borrowDate && returnDate) {
                borrowDateDisplay.textContent = `Borrow Date: ${borrowDate}`;
                returnDateDisplay.textContent = `Return Date: ${returnDate}`;
            } else {
                borrowDateDisplay.textContent = 'No borrow date available';
                returnDateDisplay.textContent = 'No return date available';
            }
        }

        // Call the function to display the bike details when the page loads
        window.onload = displayBikeDetails;
    </script>

